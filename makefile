VLOG				 = vlog
SRC					 = src
UVM_HOME		 = ./$(SRC)/uvm-1.1d
INCLUDES		 = +incdir+$(UVM_HOME)/src $(UVM_HOME)/src/uvm.sv
FLAGS				 = +define+UVM_NO_DPI
UVM_COMMAND  = $(VLOG) $(FLAGS) $(INCLUDES)

#command for verificaton
MODELSIM_VERIFICATION_COMMAND   = vsim -c bachelorThesis.TestBench -do "run -all"

#basic circuits
BASIC_CIRCUITS_SOURCE_DIRECTORY	= $(SRC)/basicCircuits
BASIC_CIRCUITS_IMPLEMENTATION		= $(BASIC_CIRCUITS_SOURCE_DIRECTORY)/*.sv

basic_circuits : $(BASIC_CIRCUITS_IMPLEMENTATION)
	$(VLOG) $(BASIC_CIRCUITS_IMPLEMENTATION)

#Replacement algorithm implementation
REPLACEMENT_ALGORITHM_SOURCE_DIRECTORY	= $(SRC)/replacementAlgorithm
REPLACEMENT_ALGORITHM_IMPLEMENTATION  	= $(REPLACEMENT_ALGORITHM_SOURCE_DIRECTORY)/*.sv

#lru
LRU_SOURCE_DIRECTORY		 = $(REPLACEMENT_ALGORITHM_SOURCE_DIRECTORY)/lru
LRU_IMPLEMENTATION  		 = $(REPLACEMENT_ALGORITHM_IMPLEMENTATION) $(LRU_SOURCE_DIRECTORY)/implementation/*.sv
LRU_CLASS_IMPLEMENTATION = $(LRU_SOURCE_DIRECTORY)/classImplementation/*.sv
LRU_VERIFICATION    		 = $(LRU_IMPLEMENTATION) \
													 $(LRU_CLASS_IMPLEMENTATION) \
											 		 $(LRU_SOURCE_DIRECTORY)/verification/*.sv 

lru_implementation	: $(LRU_IMPLEMENTATION)
	$(VLOG) $(LRU_IMPLEMENTATION)

lru_verification		: $(LRU_VERIFICATION)
	$(UVM_COMMAND) $(LRU_VERIFICATION) && $(MODELSIM_VERIFICATION_COMMAND)

#memory
MEMORY_SOURCE_DIRECTORY	= $(SRC)/memory
MEMORY_IMPLEMENTATION 	= $(MEMORY_SOURCE_DIRECTORY)/*.sv 

memory_implementation : $(MEMORY_IMPLEMENTATION)
	$(VLOG) $(MEMORY_IMPLEMENTATION)

#ram
RAM_SOURCE_DIRECTORY	=	$(MEMORY_SOURCE_DIRECTORY)/ram
RAM_IMPLEMENTATION		= $(MEMORY_IMPLEMENTATION) $(RAM_SOURCE_DIRECTORY)/implementation/*.sv 
RAM_VERIFICATION			=	$(RAM_IMPLEMENTATION) $(RAM_SOURCE_DIRECTORY)/verification/*.sv

ram_implementation : $(RAM_IMPLEMENTATION)
	$(VLOG) $(RAM_IMPLEMENTATION)
	
ram_verification : $(RAM_VERIFICATION)
	$(UVM_COMMAND) $(RAM_VERIFICATION) && $(MODELSIM_VERIFICATION_COMMAND)

#snoopy cache
SNOOPY_CACHE_SOURCE_DIRECTORY = $(MEMORY_SOURCE_DIRECTORY)/snoopyCache
SNOOPY_CACHE_IMPLEMENTATION   = $(SNOOPY_CACHE_SOURCE_DIRECTORY)/*.sv

#snoopy direct mapping cache unit
SNOOPY_DIRECT_MAPPING_CACHE_UNIT_SOURCE_DIRECTORY = $(SNOOPY_CACHE_SOURCE_DIRECTORY)/directMappingCacheUnit
SNOOPY_DIRECT_MAPPING_CACHE_UNIT_IMPLEMENTATION   = $(SNOOPY_CACHE_IMPLEMENTATION) $(SNOOPY_DIRECT_MAPPING_CACHE_UNIT_SOURCE_DIRECTORY)/implementation/*.sv

snoopy_direct_mapping_cache_unit_implementation : $(SNOOPY_DIRECT_MAPPING_CACHE_UNIT_IMPLEMENTATION)
	$(VLOG) $(SNOOPY_DIRECT_MAPPING_CACHE_UNIT_IMPLEMENTATION)

#snoopy set associative cache
SNOOPY_SET_ASSOCIATIVE_CACHE_SOURCE_DIRECTORY 		= $(SNOOPY_CACHE_SOURCE_DIRECTORY)/setAssociativeCache
SNOOPY_SET_ASSOCIATIVE_CACHE_IMPLEMENTATION 			= $(SNOOPY_DIRECT_MAPPING_CACHE_UNIT_IMPLEMENTATION) \
																						 				$(LRU_IMPLEMENTATION) \
																						 				$(SNOOPY_SET_ASSOCIATIVE_CACHE_SOURCE_DIRECTORY)/implementation/*.sv
SNOOPY_SET_ASSOCIATIVE_CACHE_CLASS_IMPLEMENTATION = $(LRU_CLASS_IMPLEMENTATION) $(SNOOPY_SET_ASSOCIATIVE_CACHE_SOURCE_DIRECTORY)/classImplementation/*.sv
SNOOPY_SET_ASSOCIATIVE_CACHE_VERIFICATION 				= $(SNOOPY_SET_ASSOCIATIVE_CACHE_IMPLEMENTATION) \
																						 				$(SNOOPY_SET_ASSOCIATIVE_CACHE_CLASS_IMPLEMENTATION) \
																						 				$(SNOOPY_SET_ASSOCIATIVE_CACHE_SOURCE_DIRECTORY)/verification/*.sv

snoopy_set_associative_cache_implementation : $(SNOOPY_SET_ASSOCIATIVE_CACHE_IMPLEMENTATION)
	$(VLOG) $(SNOOPY_SET_ASSOCIATIVE_CACHE_IMPLEMENTATION)

snoopy_set_associative_cache_verification : $(SNOOPY_SET_ASSOCIATIVE_CACHE_VERIFICATION)
	$(UVM_COMMAND) $(SNOOPY_SET_ASSOCIATIVE_CACHE_VERIFICATION) && $(MODELSIM_VERIFICATION_COMMAND)

#cache memory
CACHE_SOURCE_DIRECTORY	=	$(MEMORY_SOURCE_DIRECTORY)/cache
CACHE_IMPLEMENTATION		= $(CACHE_SOURCE_DIRECTORY)/*.sv

#tag memory
TAG_MEMORY_SOURCE_DIRECTORY	=	$(CACHE_SOURCE_DIRECTORY)/tagMemory
TAG_MEMORY_IMPLEMENTATION		= $(CACHE_IMPLEMENTATION) $(TAG_MEMORY_SOURCE_DIRECTORY)/implementation/*.sv
TAG_MEMORY_VERIFIACTION			= $(TAG_MEMORY_IMPLEMENTATION) $(TAG_MEMORY_SOURCE_DIRECTORY)/verification/*.sv

tag_memory_implementation : $(TAG_MEMORY_IMPLEMENTATION)
	$(VLOG) $(TAG_MEMORY_IMPLEMENTATION)

tag_memory_verification	:	$(TAG_MEMORY_VERIFIACTION)
	$(UVM_COMMAND) $(TAG_MEMORY_VERIFIACTION) && $(MODELSIM_VERIFICATION_COMMAND)
